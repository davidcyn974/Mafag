<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="95dp"

                android:layout_height="98dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/microsoftImageButton"
                android:src="@drawable/microsoftlogo" />

            <ImageButton
                android:layout_width="145dp"
                android:layout_height="110dp"
                android:id="@+id/amazonImageButton"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/amazonlogo" />

            <ImageButton
                android:layout_width="95dp"
                android:layout_height="90dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/facebookImageButton"
                android:src="@drawable/facebooklogo" />

            <ImageButton
                android:layout_width="149dp"
                android:layout_height="119dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/appleImageButton"
                android:src="@drawable/applelogo" />

            <ImageButton
                android:id="@+id/googleImageButton"
                android:layout_width="156dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:contentDescription="@string/bro"
                android:src="@drawable/googlelogo" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>